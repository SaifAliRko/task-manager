<!-- Success/Failure Toast starts -->
<div class="row" style="margin-bottom: 10px;">
  <div class="alert alert-dismissible fade show myAlert col-8" role="alert" style="display: none;">
    <span></span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
<!-- Success/Failure Toast ends -->

<!-- Change Password Card starts -->
<div class="card mx-auto text-center card-container signin" style="width: 25rem;">
  <div class="card-body" style="box-shadow: 2px 2px 7px 1px #ff00e6;">

    <form class="form-signin registered-user" id="changePasswordForm">
      <p style="font-style: italic; font-size: 20px;">Change <strong>Password!</strong></p>
      <br>

      {{#if renderOldPassword}}
        <input type="password" class="form-control changePasswordFieldStyle roundBorder" style="margin-top: 0px;" name="oldPassword" id="oldPassword" placeholder="Old Password..." required onfocus="onfocusAction('oldPassword'); return false;">
        <span id="oldPassword_err" class="errMsgSpan float-left" style="display: none;">*Enter correct password</span>
      {{/if}}

      <input type="password" class="form-control changePasswordFieldStyle roundBorder" style="" name="newPassword" id="newPassword" placeholder="New Password..." required onfocus="onfocusAction('newPassword'); return false;">
      <span id="newPassword_err" class="errMsgSpan float-left" style="display: none;">*Enter valid value</span>

      <input type="password" class="form-control changePasswordFieldStyle roundBorder" style="" name="newPassword2" id="newPassword2" placeholder="Confirm New Password..." required onfocus="onfocusAction('newPassword2'); return false;">
      <span id="newPassword2_err" class="errMsgSpan float-left" style="display: none;">*Enter valid value</span>

      <button class="btn btn-lg btn-primary btn-block roundBorder" type="submit" id="btn-changePassword" onclick="validatePasswordInputs(event);" style="margin-top: 20px;">Change My Password!</button>

      {{#if renderOldPassword}}
        <button type="submit" class="btn btn-secondary btn-lg btn-block roundBorder" onclick="window.location.href='/users'; showSpinner(); return false;" style="margin-top: 10px;">Cancel</button>
      {{/if}}
      <br>
    </form>

  </div>
</div>
<!-- Change Password Card Ends -->