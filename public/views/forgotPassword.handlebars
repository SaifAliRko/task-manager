<!-- Success/Failure Toast starts -->
<div class="row" style="margin-bottom: 10px;">
  <div class="alert alert-dismissible fade show myAlert col-8" role="alert" style="display: none;">
    <span></span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
<!-- Success/Failure Toast ends -->

<!-- Forget Password Card starts -->
<div class="card mx-auto text-center card-container signin" style="width: 25rem;">
  <div class="card-body" style="box-shadow: 2px 2px 7px 1px #ff00e6;">

    <form class="form-signin" id="mailLimitExceeded" style="display: none;">
      <p style="font-style: italic; font-size: 20px;"> <strong>Sorry, You have exceeded the limits of password change requests. Try after 24 hours.</strong></p>
    </form>

    <form class="form-signin registered-user" id="forgotPasswordForm">
      <p style="font-style: italic; font-size: 20px;">Forgot <strong>Password?</strong> No Problem...</p>
      <br>

      <div id="FB-firstDiv">
        <div class="row" style="margin: 0 auto;">
          <input type="email" class="form-control changePasswordFieldStyle roundBorder" style="" name="user_email" id="user_email" placeholder="Enter E-Mail..." required onfocus="onfocusAction('user_email'); return false;" />
          <span id="user_email_err" class="errMsgSpan float-left" style="display: none;">*Enter valid E-Mail</span>
        </div>
        <div class="row">
          <button class="btn btn-lg btn-primary roundBorder" type="submit" id="btn-FP-sendToken" onclick="validateFPemailAndSendToken(event);" style="margin: 0 auto;">Send Token!
            <p style="font-size: 12px; margin-bottom: -5px; display: none;" id="FP-btn-sendToken-useMsg">(One more time)</p>
          </button>
        </div>
      </div>

      <div id="FP-nextDiv" style="display: none;">
        <input type="text" class="form-control changePasswordFieldStyle roundBorder" style="" name="FPAuthToken" id="FPAuthToken" placeholder="Enter Auth Token..." required onfocus="onfocusAction('FPAuthToken'); return false;">
        <span id="FPAuthToken_err" class="errMsgSpan float-left" style="display: none;">*Enter valid token</span>

        <button class="btn btn-lg btn-primary btn-block roundBorder" type="submit" id="btn-FP-changePassword" onclick="validateFPAuthInputs(event);" style="margin-top: 20px;">Validate Me!</button>
      </div>

      <br>
    </form>

  </div>
</div>
<!-- Forget Password Card Ends -->